{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Vite-friendly ergonomics
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,

    // DX & crossâ€‘platform sanity
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Vite env types
    "types": ["vite/client"]
  },
  "include": ["src"]
}
