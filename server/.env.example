M3_BIND=127.0.0.1:3033
M3_BEARER=supersecret
M3_WEBHOOK_URL=https://example.com/webhook
M3_WEBHOOK_SECRET=whsec_123
M3_DB_PATH=/custom/path/m3.db

# Exports
M3_EXPORTS_DIR=server/exports       # root folder for all exports/logs

# --- Reply Engine ------------------------------------------------
M3_REPLIES_WINDOW_MINUTES=20        # how long an activation window lasts (default: 20)
M3_REPLIES_MODE=random              # fixed:poetic/sarcastic/paradox or random
M3_REPLIES_WEIGHTS=poetic:0.5,sarcastic:0.3,paradox:0.2
M3_REPLIES_WEEKLY_CHANCE=0.08       # open weekly reply window per interaction (0.0–1.0, default: 0.08)
M3_SAFE_PROMPT=1                    # scrub “wait/later/soon” promises from replies (1 on, 0 off)

# Value Flow (mock by default)
VALUE_FLOW=mock              # mock | money | gift | timebank | barter | grants | buffer
VALUE_MIN_NEXT=one-true-step # smallest shippable unit
VALUE_HORIZON=7d             # plan window (human-readable)
# Optional guard: force mock until a timestamp (e.g., 2025-08-25T00:00:00Z)
VALUE_FORCE_MOCK_UNTIL=